@model QTDrugPrescription.AspMvc.Models.Prescription

@{
    ViewData["Title"] = "Edit";
    var drugs = new SelectList(Model.Drugs, "Id", "Designation", nameof(Model.DrugId));
    var patients = new SelectList(Model.Patients, "Id", "LastName", nameof(Model.PatientId));
}

<h1>Edit</h1>

<h4>Prescription</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DrugId" class="control-label"></label>
                @Html.DropDownListFor(model => model.DrugId, drugs, null, new { @class="form-select" }) 
            </div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                @Html.DropDownListFor(model => model.PatientId, patients, null, new { @class="form-select" }) 
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dosing" class="control-label"></label>
                <input asp-for="Dosing" class="form-control" />
                <span asp-validation-for="Dosing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
